<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.blockchain.timebank.entity.UserEntity</class>
        <class>com.blockchain.timebank.entity.ServiceEntity</class>
        <class>com.blockchain.timebank.entity.TimeaccountEntity</class>
        <class>com.blockchain.timebank.entity.PublishEntity</class>
        <class>com.blockchain.timebank.entity.ViewPublishDetailEntity</class>
        <class>com.blockchain.timebank.entity.RecordEntity</class>
        <class>com.blockchain.timebank.entity.ViewRecordDetailEntity</class>
        <class>com.blockchain.timebank.entity.ActivityPublishEntity</class>
        <class>com.blockchain.timebank.entity.TeamEntity</class>
        <class>com.blockchain.timebank.entity.ViewTeamDetailEntity</class>
        <class>com.blockchain.timebank.entity.TeamUserEntity</class>
        <class>com.blockchain.timebank.entity.ViewTeamUserDetailEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/mydb?characterEncoding=utf-8"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
